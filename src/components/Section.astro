---
// se ejecuta en el servidor o en build

const { title } = Astro.props;

// Traducciones de títulos de sección
const translations: Record<string, string> = {
  "About": "Sobre mí",
  "Experience": "Experiencia",
  "Education": "Educación",
  "Skills": "Habilidades",
  "Projects": "Proyectos",
  "Languages": "Idiomas"
};

// Inicializar con inglés por defecto para SSR
const displayTitle = title;
const esTitle = typeof title === 'string' ? (translations[title] || title) : title;
---

<section>
    {title && (
        <h2 data-en={title} data-es={esTitle}>
            {displayTitle}
        </h2>
    )}
    <slot />
</section>

<script>
// Importar el inicializador de traducción solo una vez por página
if (!(window as Window).sectionTranslatorInitialized) {
    (window as Window).sectionTranslatorInitialized = true;
    
    import('../i18n/translator.js').then(module => {
      module.initializeTranslator();
    });
}
</script>

<style>
    section {
        width: 100%;
        margin: 0 0 48px;
    }

    h2 {
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }

</style>